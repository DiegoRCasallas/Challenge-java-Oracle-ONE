<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
    prefHeight="480.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE"
    xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="main.controller.MainController" >
    <tabs>
        <Tab text="Currency converter">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <children>
                        <!-- Labels-->
                        <Label layoutX="34.0" layoutY="33.0" prefHeight="18.0" prefWidth="234.0"
                            text="Seleccione divisas" />
                        <Label layoutX="38.0" layoutY="160.0" text="a:" />
                        <Label layoutX="34.0" layoutY="75.0" prefHeight="18.0" prefWidth="234.0"
                            text="Convertir de:" />
                        <Label layoutX="44.0" layoutY="245.0" text="Ingrese valor a convertir" />
                        <!-- TextArea-->
                        <TextArea fx:id="txtInputCurrency" layoutX="44.0" layoutY="277.0"
                            prefHeight="88.0" prefWidth="236.0" />
                        <TextArea fx:id="txtOutputCurrency" layoutX="326.0" layoutY="277.0"
                            prefHeight="88.0" prefWidth="236.0" />
                        <!-- Combobox-->
                        <ComboBox fx:id="cbCurrency1" layoutX="38.0" layoutY="113.0"
                            prefHeight="11.0" prefWidth="524.0" promptText="Seleccione moneda "
                            visibleRowCount="5" onAction="#cbEventCurrOrigen" />
                        <ComboBox fx:id="cbCurrency2" layoutX="38.0" layoutY="191.0"
                            prefHeight="11.0" prefWidth="524.0" promptText="Seleccione moneda "
                            visibleRowCount="5" onAction="#cbEventCurrDestino" />
                        <!-- Buttons-->
                        <Button fx:id="btnConvertCurrency" layoutX="260.0" layoutY="380.0"
                            mnemonicParsing="false" text="Convertir" onAction="#btnEventCurrency" />
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Temperature Converter">
            <content>
                <AnchorPane fx:id="cb" minHeight="0.0" minWidth="0.0" prefHeight="513.0"
                    prefWidth="610.0">
                    <children>
                        <!-- Labels-->
                        <Label layoutX="37.0" layoutY="33.0" text="Seleccione escala de temperatura" />
                        <Label layoutX="37.0" layoutY="75.0" text="Convertir de :" />
                        <Label layoutX="37.0" layoutY="160.0" text="a:" />
                        <Label layoutX="43.0" layoutY="247.0" text="Ingrese valor a convertir" />
                        <!-- Combobox-->
                        <ComboBox fx:id="cbTemperature1" layoutX="37.0" layoutY="107.0"
                            prefHeight="8.0" prefWidth="526.0" promptText="Seleccione grados " onAction="#cbEventTempOrigen" />
                        <ComboBox fx:id="cbTemperature2" layoutX="37.0" layoutY="193.0"
                            prefHeight="8.0" prefWidth="526.0" promptText="Seleccione grados " onAction="#cbEventTempDestino" />
                        <!-- TextArea-->
                        <TextArea fx:id="txtInputTemperature" layoutX="43.0" layoutY="276.0"
                            prefHeight="88.0" prefWidth="245.0" />
                        <TextArea fx:id="txtOutputTemperature" layoutX="322.0" layoutY="278.0"
                            prefHeight="87.0" prefWidth="242.0" />
                        <!-- Botones-->
                        <Button fx:id="btnConvertTempertature" layoutX="248.0" layoutY="384.0"
                            mnemonicParsing="false" text="Convertir" onAction="#btnEventTemperature" />
                    </children>
                </AnchorPane>
            </content>
        </Tab>
    </tabs>
</TabPane>